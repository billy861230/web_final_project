<body>
    <input type="button" onclick="problem()" value="problems">
    <div id="id">1</div>
    <h1>a + b</h1>
    <h2>description</h2>
    <div>given 2 integer a, b, print its sum a + b</div>
    
    <h2>
        sample input</h2>
        <div>
            1 2
        </div>
    

    <h2>
        sample output</h2>
        <div>
            3
        </div>
    <table border="1" id="result">
        <tr>
            <td>1.in</td>
            <td id="result_1"></td>
        </tr>
        <tr>
            <td>2.in</td>
            <td id="result_2"></td>
        </tr>
    </table>
        <div>source code</div>
    <textarea cols="200" rows="50" id="src" style="font-size:18px;"/textarea>
    
    </textarea>
    <input type="button" value="submit" onclick="submit()">
    <script>
        var result=document.getElementById('result');
        result.style.display='none';
        var socket = io('http://localhost:3000');
        function submit(){
            var id=document.getElementById('id').innerHTML;
            var src=document.getElementById('src').value;
            console.log(id);
            let data={
                id:id,
                src:src
            };
            console.log(data);
            socket.emit('submit',data);
        }

        socket.on('result',(data)=>{
            console.log(data);
            result.style.display='inline';
            document.getElementById('result_1').innerHTML=data.result_1;
            document.getElementById('result_2').innerHTML=data.result_2;
        })

        socket.on('err',(err)=>{
            alert(err);
        })

    </script>
    
</body>